<?xml version="1.0" encoding="utf-8"?>
<com.jqh.kklive.view.SizeChangeRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_host_live"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jqh.ikkavlivemodule.AVRootView
        android:id="@+id/live_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <tyrantgit.widget.HeartLayout
        android:id="@+id/heartLayout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:paddingBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

    <com.jqh.kklive.view.BottomControllView
        android:id="@+id/control_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

    <com.jqh.kklive.view.ChatView
        android:id="@+id/chat_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:id="@+id/chat_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/control_view"
        android:orientation="horizontal">

        <com.jqh.kklive.view.ChatMsgListView
            android:id="@+id/chat_list"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="2" />

        <View
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1" />
    </LinearLayout>

    <com.jqh.kklive.view.DanmuView
        android:id="@+id/danmu_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/chat_list_view" />

    <com.jqh.kklive.view.GiftRepeatView
        android:id="@+id/gift_repeat_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/chat_list_view" />

    <com.jqh.kklive.view.GiftFullView
        android:id="@+id/gift_full_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</com.jqh.kklive.view.SizeChangeRelativeLayout>
